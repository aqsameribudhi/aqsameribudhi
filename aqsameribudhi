<!-- TODAY SECTION -->
<div class="today" id="todayBox">
  <h2 id="todayTitle"></h2>
  <textarea id="todayText" placeholder="Add your thought..."></textarea>
</div>

<!-- DAYS 1â€“15 -->
<div class="days" id="days"></div>

<div id="editor">
  <h2 id="dayTitle"></h2>
  <textarea id="textBox"></textarea>
  <button onclick="saveClose()">Save</button>
</div>

<script>
  // ðŸ”´ SET YOUR DAY 1 DATE HERE
  const startDate = new Date("2026-01-01"); // change if needed

  const today = new Date();
  const diffDays = Math.floor((today - startDate) / (1000 * 60 * 60 * 24)) + 1;
  const todayKey = "day" + diffDays;

  const todayTitle = document.getElementById("todayTitle");
  const todayText = document.getElementById("todayText");

  todayTitle.innerText = "Day " + diffDays + " â€” Add your thought ðŸ’­";
  todayText.value = localStorage.getItem(todayKey) || "";

  todayText.addEventListener("input", () => {
    localStorage.setItem(todayKey, todayText.value);
  });

  // PRESET DAYS 1â€“13
  const preset = {
    day1: "Day 1: Everything feels different without you.",
    day2: "Day 2: I keep checking my phone, hoping itâ€™s you.",
    day3: "Day 3: Distance hurts, but love stays strong.",
    day4: "Day 4: Missing you became part of my routine.",
    day5: "Day 5: Even busy days end with your thoughts.",
    day6: "Day 6: I smiled today because of a memory.",
    day7: "Day 7: One week apart, still us.",
    day8: "Day 8: Loving you feels calm and heavy together.",
    day9: "Day 9: Random thought â€” your laugh is my favorite sound.",
    day10: "Day 10: Some days feel long without you.",
    day11: "Day 11: Iâ€™m learning patience because of you.",
    day12: "Day 12: Missing you comes in waves.",
    day13: "Day 13: Almost there, holding hope."
  };

  const daysDiv = document.getElementById("days");
  const editor = document.getElementById("editor");
  const textBox = document.getElementById("textBox");
  const dayTitle = document.getElementById("dayTitle");
  let currentKey = "";

  for (let i = 1; i <= 15; i++) {
    const d = document.createElement("div");
    d.className = "day";
    d.innerText = "Day " + i;
    d.onclick = () => openDay("day" + i, i);
    daysDiv.appendChild(d);

    if (!localStorage.getItem("day" + i) && preset["day" + i]) {
      localStorage.setItem("day" + i, preset["day" + i]);
    }
  }

  function openDay(key, num) {
    currentKey = key;
    dayTitle.innerText = "Day " + num;
    textBox.value = localStorage.getItem(key) || "";
    editor.style.display = "block";
  }

  function saveClose() {
    localStorage.setItem(currentKey, textBox.value);
    editor.style.display = "none";
  }
</script>

